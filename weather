#!/bin/sh
# $Id$
# $Date: Mon 29 Apr 2013 01:15:23 PM UTC $
# Jeremiah Dow <jeremdow@gmail.com>
#
# current conditions from Google in degrees fahrenheit
#
# Usage: weather [city]

# links or compatible text browser
browser="links"
city=$(echo ${@:-juneau} | tr " " "+")

$browser -dump "http://www.google.com/search?hl=en&q=weather+$city"| head -8 | tail -n 1 | cut -c 23-30
