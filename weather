#!/bin/sh
# $Id$
# $Date: Thu 09 Jan 2014 09:02:24 PM UTC $
# Jeremiah Dow <jeremdow@gmail.com>
#
# current conditions from Google in degrees fahrenheit
#
# Usage: weather [city]

# links or similar text browser
browser="links"
city=$(echo ${@:-boston} | tr " " "+")

$browser -dump "http://www.google.com/search?hl=en&q=weather+$city" | grep -m1 -o '[0-9]*DEGF'
