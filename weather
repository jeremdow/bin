#!/bin/sh
# $Id$
# $Date: Wed 01 May 2013 07:44:16 AM UTC $
# Jeremiah Dow <jeremdow@gmail.com>
#
# current conditions from Google in degrees fahrenheit
#
# Usage: weather [city]

# links or similar text browser
browser="links"
city=$(echo ${@:-juneau} | tr " " "+")

$browser -dump "http://www.google.com/search?hl=en&q=weather+$city" | grep DEGF | cut -c 23-30
