#!/bin/sh
# $Id$
# $Date: Sat 04 May 2013 02:57:51 AM UTC $
# Jeremiah Dow <jeremdow@gmail.com>
#
# current conditions from Google in degrees fahrenheit
#
# Usage: weather [city]

# links or similar text browser
browser="links"
city=$(echo ${@:-juneau} | tr " " "+")

$browser -dump "http://www.google.com/search?hl=en&q=weather+$city" | grep -m1 DEGF | cut -c 23-30
